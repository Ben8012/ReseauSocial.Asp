@model ReseauSocial.Asp.Models.Forms.ProfileUser

@{
    ViewData["Title"] = "ProfilUser";
}

<h1>ProfilUser</h1>

<div>
    <h4>ProfileUser</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div>
    
    @Html.ActionLink("Editez votre profile", "Update", new { id = Model.Id }) |

    @if (Model.Status.Id == (int)ReseauSocial.Asp.Models.StatusType.Actived)
    {
        @Html.ActionLink("Déactiver votre compte", "DeactivateStatus", new { ChangUserId = Model.Id })
        @Html.ActionLink("Je demande de suppression de mon compte", "AskDeleteStatus", new { ChangedUserId = Model.Id })
    }
    else if (Model.Status.Id == (int)ReseauSocial.Asp.Models.StatusType.Deactived)
    {
        @Html.ActionLink("Réactiver de mon compte", "ReactivateStatus", new { ChangedUserId = Model.Id })
    }
    else if (Model.Status.Id == (int)ReseauSocial.Asp.Models.StatusType.AskDeleted)
    {
        @Html.ActionLink("Réactiver de mon compte", "ReactivateStatus", new { ChangedUserId = Model.Id })
    }
  
    <a asp-action="Index">Retour</a>
</div>

@Html.ActionLink("Activation de mon compte", "AskActivateStatus", new { ChangedUserId = Model.Id })
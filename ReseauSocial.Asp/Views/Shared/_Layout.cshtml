@inject ReseauSocial.Asp.Sessions.ISessionHelpers sessionManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReseauSocial.Asp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color: #e3f2fd;">
            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ReseauSocial.Asp</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="mx-1 nav-item">
                            <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                        @*    <li class="mx-1 nav-item">
            <a class="btn btn-outline-primary" asp-area="" asp-controller="Home" asp-action="Privacy">Vie privée</a>
        </li>*@
                        @if (sessionManager.CurentUser is null)
                        {
                            <li class="mx-1 nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="User" asp-action="Register">S'enregistrer</a>
                            </li>
                            <li class="mx-1 nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="User" asp-action="Login">Se connecter</a>
                            </li>
                        }
                        else
                        {
                            <li class="mx-1 nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="User" asp-action="Index">Liste de mes contacts</a>
                            </li>
                            <li class="mx-1 nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="Message" asp-action="Index">Liste des messages</a>
                            </li>
                            <li class="mx-1 nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="Article" asp-action="Index"> Tous les articles</a>
                            </li>
                            <li class="mx-1 nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="Article" asp-action="GetMyArticle"> Mes articles</a>
                            </li>

                            <li class="mx-1 nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="User" asp-action="ProfilUser">Mon profile</a>
                            </li>
                            <li class="mx-1 nav-item">
                                <a class="btn btn-outline-primary" asp-area="" asp-controller="User" asp-action="Logout">Se déconnecter</a>
                            </li>


                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ReseauSocial.Asp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
